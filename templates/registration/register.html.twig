{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="contentMargin d-flex justify-content-center">
        <div class="bg-lightGreen col-10 col-md-8 col-xl-6 col-xxl-4 p-5 rounded-4 d-flex flex-column gap-4 justify-content-center mb-5">
            <h1 class="text-center">Inscription</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.firstname) }}
            {{ form_row(registrationForm.lastname) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.birth_date, {'id': 'dateBirthRegister', 'type': 'text'}) }}
            {{ form_row(registrationForm.plainPassword, {'attr': {'data-controller': 'ux-toggle-password'}}) }}
            {{ form_row(registrationForm.agreeTerms) }}

            <div class="w-100 d-flex justify-content-center gap-3">
                <button type="submit" class="btn-green w-50">S'inscrire</button>
                <a href="{{ path('app_login') }}" class="btn-yellow text-center w-50">DÃ©ja un compte ?</a>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
    <script src="{{ asset('libs/jquery/jquery-3.7.1.min.js') }}"></script>
    <script src="{{ asset('libs/mc-datepicker/dist/mc-calendar.min.js') }}"></script>
    <script src="{{ asset('js/register.js') }}"></script>
{% endblock %}
