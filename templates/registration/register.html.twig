{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="contentMargin d-flex justify-content-center">
        <div class="bg-lightGreen w-50 p-5 rounded-4 d-flex flex-column gap-4 justify-content-center mb-5">
            <h1 class="text-center">Inscription</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.firstname) }}
            {{ form_row(registrationForm.lastname) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword) }}
            {{ form_row(registrationForm.confirmPassword) }}
            {{ form_row(registrationForm.agreeTerms) }}

            <div class="w-100 d-flex justify-content-center">
                <button type="submit" class="btn-green w-50">S'inscrire</button>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
