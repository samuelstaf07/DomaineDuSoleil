{% extends 'base.html.twig' %}

{% block title %}Tous les événements{% endblock %}

{% block body %}
    <div class="contentMargin d-flex justify-content-center flex-column align-items-center">
        <h3 class="text-center">Événements</h3>
        <div class="mt-5 w-75">
            <div class="row justify-content-center">
                {% for event in events %}
                    <div class="col-sm-6 mb-4 px-3">
                        <div class="card event-card h-100 border-0">
                            <div class="row g-0 h-100">
                                <div class="col-md-5 h-100">
                                    <img src="{{ asset('img/imageAccueil.jpg') }}" class="img-fluid rounded-start h-100 w-100 object-fit-cover" alt="Tir à l'arc">
                                </div>
                                <div class="col-md-7 d-flex flex-column">
                                    <div class="card-body flex-grow-1">
                                        <h5 class="card-title">
                                            {% set words = event.content|split(' ') %}
                                            {% if words|length <= 5 %}
                                                {{ event.content }}
                                            {% else %}
                                                {{ words|slice(0, 5)|join(' ') ~ '...' }}
                                            {% endif %}
                                        </h5>
                                        <p class="card-text">
                                            <i class="fas fa-user-friends"></i>
                                            {% if event.ageRequirement == 0%}
                                                Pour tout le monde !
                                            {% else %}
                                                À partir de {{ event.ageRequirement }} ans
                                            {% endif %}
                                            <br>
                                            <i class="fas fa-map-marker-alt"></i>{{ event.location }}<br>
                                            <i class="fas fa-calendar-alt"></i> le {{ event.date|date('d/m/Y') }}<br>
                                            <i class="fas fa-ticket-alt"></i> {{ event.nbPlaces }} places
                                        </p>
                                    </div>
                                    <div class="card-footer bg-transparent border-0">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <a href="#" class="btn-yellow">Voir plus</a>
                                            <span class="price h3">{{ event.price|number_format(2, ',', '') }}€/pers</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="text-center mt-4">
                <a href="{{ path('app_events') }}" class="btn-outline-yellow">Voir tous les événements</a>
            </div>
        </div>
    </div>
{% endblock %}
