{% extends 'base.html.twig' %}

{% block title %}PostImages index{% endblock %}

{% block body %}
    <h1>PostImages index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post_image in post_images %}
            <tr>
                <td>{{ post_image.id }}</td>
                <td>
                    <a href="{{ path('app_post_images_show', {'id': post_image.id}) }}">show</a>
                    <a href="{{ path('app_post_images_edit', {'id': post_image.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_post_images_new') }}">Create new</a>
{% endblock %}
