{% extends 'base.html.twig' %}

{% block title %}Bills index{% endblock %}

{% block body %}
    <h1>Bills index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>Date</th>
                <th>Total_price</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bill in bills %}
            <tr>
                <td>{{ bill.id }}</td>
                <td>{{ bill.content }}</td>
                <td>{{ bill.date ? bill.date|date('Y-m-d') : '' }}</td>
                <td>{{ bill.totalPrice }}</td>
                <td>{{ bill.status }}</td>
                <td>
                    <a href="{{ path('app_bills_show', {'id': bill.id}) }}">show</a>
                    <a href="{{ path('app_bills_edit', {'id': bill.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_bills_new') }}">Create new</a>
{% endblock %}
