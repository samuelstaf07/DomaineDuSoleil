{% extends 'base.html.twig' %}

{% block title %}Events{% endblock %}

{% block body %}
    <div class="contentMargin">
        <h1>Events</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ event.content }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ event.price }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ event.date ? event.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nb_places</th>
                <td>{{ event.nbPlaces }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ event.location }}</td>
            </tr>
            <tr>
                <th>Is_active</th>
                <td>{{ event.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Age_requirement</th>
                <td>{{ event.ageRequirement }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ event.createdAt ? event.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('app_events_index') }}">back to list</a>

        <a href="{{ path('app_events_edit', {'id': event.id}) }}">edit</a>

        {{ include('admin/events/_delete_form.html.twig') }}
    </div>
{% endblock %}
