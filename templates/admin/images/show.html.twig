{% extends 'base.html.twig' %}

{% block title %}Images{% endblock %}

{% block body %}
    <div class="contentMargin">
        <h1>Images</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ image.id }}</td>
            </tr>
            <tr>
                <th>Src</th>
                <td>{{ image.src }}</td>
            </tr>
            <tr>
                <th>Alt</th>
                <td>{{ image.alt }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('app_images_index') }}">back to list</a>

        <a href="{{ path('app_images_edit', {'id': image.id}) }}">edit</a>

        {{ include('admin/images/_delete_form.html.twig') }}
    </div>
{% endblock %}
