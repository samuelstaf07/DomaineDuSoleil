{% extends 'base.html.twig' %}

{% block title %}Users index{% endblock %}

{% block body %}
    <div class="contentMargin">
        <h1>Users index</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Nb_points</th>
                <th>Account_number</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Last_log_at</th>
                <th>Is_active</th>
                <th>Is_email_authentificated</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.nbPoints }}</td>
                    <td>{{ user.accountNumber }}</td>
                    <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ user.lastLogAt ? user.lastLogAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ user.isActive ? 'Yes' : 'No' }}</td>
                    <td>{{ user.isEmailAuthentificated ? 'Yes' : 'No' }}</td>
                    <td>
                        <a href="{{ path('app_users_show', {'id': user.id}) }}">show</a>
                        <a href="{{ path('app_users_edit', {'id': user.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="14">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_users_new') }}">Create new</a>
    </div>
{% endblock %}
