{% block body %}
    <nav class="navbar navbar-expand-lg px-4 py-3" style="background: linear-gradient(to right, #006633, #95C11F);">
        <a class="navbar-brand align-items-center d-flex" href="#">
            <img src="{{ asset('img/DomaineduSoleilNoName.svg') }}" alt="Logo" class="me-2" height="75">
            <h2>Domaine Du Soleil</h2>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto flex gap-2">
                {% if app.user %}
                    <li class="nav-item">
                        <a class="btn btn-danger" href="{{ path('app_logout') }}">Deconnexion</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="btn btn-success" href="{{ path('app_login') }}">Connexion</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-secondary" href="{{ path('app_register') }}">Inscription</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>
