{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <form method="post" class="contentMargin d-flex justify-content-center align-items-center">
        <div class="bg-lightGreen col-10 col-md-8 col-xl-6 col-xxl-4 p-5 rounded-4 d-flex flex-column gap-4 mb-3">
            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté avec {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% endif %}

            <h1 class="text-center">Se connecter</h1>

            <div class="d-flex flex-column gap-2">
                <label for="username">Adresse mail</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div class="d-flex flex-column gap-2">
                <label for="password">Mot de passe</label>
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="w-100 d-flex flex-column justify-content-center gap-3">
                <div class="d-flex gap-3 w-100">
                    <button class="btn-green w-50 text-center" type="submit">Se connecter</button>
                    <a href="{{ path('app_register') }}" class="btn-signup w-50 text-center">S'inscrire</a>
                </div>
                <a href="{{ path('app_forgot_password_request') }}" class="text-center btn-yellow">Mot de passe oublié</a>
                <a href="{{ path('connect_google_start') }}" class="btn-black text-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="23.46" height="24" viewBox="0 0 256 262"><path fill="#4285f4" d="M255.878 133.451c0-10.734-.871-18.567-2.756-26.69H130.55v48.448h71.947c-1.45 12.04-9.283 30.172-26.69 42.356l-.244 1.622l38.755 30.023l2.685.268c24.659-22.774 38.875-56.282 38.875-96.027"/><path fill="#34a853" d="M130.55 261.1c35.248 0 64.839-11.605 86.453-31.622l-41.196-31.913c-11.024 7.688-25.82 13.055-45.257 13.055c-34.523 0-63.824-22.773-74.269-54.25l-1.531.13l-40.298 31.187l-.527 1.465C35.393 231.798 79.49 261.1 130.55 261.1"/><path fill="#fbbc05" d="M56.281 156.37c-2.756-8.123-4.351-16.827-4.351-25.82c0-8.994 1.595-17.697 4.206-25.82l-.073-1.73L15.26 71.312l-1.335.635C5.077 89.644 0 109.517 0 130.55s5.077 40.905 13.925 58.602z"/><path fill="#eb4335" d="M130.55 50.479c24.514 0 41.05 10.589 50.479 19.438l36.844-35.974C195.245 12.91 165.798 0 130.55 0C79.49 0 35.393 29.301 13.925 71.947l42.211 32.783c10.59-31.477 39.891-54.251 74.414-54.251"/></svg>
                    Se connecter avec Google
                </a>

            </div>
        </div>
    </form>
{% endblock %}
