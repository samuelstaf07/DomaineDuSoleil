{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <form method="post" class="contentMargin d-flex justify-content-center align-items-center">
        <div class="bg-lightGreen w-25 p-5 rounded-4 d-flex flex-column gap-4">
            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté avec {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% endif %}

            <h1 class="text-center">Se connecter</h1>

            <div class="d-flex flex-column gap-2">
                <label for="username">Adresse mail</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div class="d-flex flex-column gap-2">
                <label for="password">Mot de passe</label>
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Remember me</label>
            </div>
            #}

            <div class="w-100 d-flex justify-content-center gap-3">
                <button class="btn-green" type="submit">Se connecter</button>
                <a href="{{ path('app_register') }}" class="btn-outline-grey">S'inscrire</a>
            </div>
        </div>
    </form>
{% endblock %}
